{
    "name": "Dart Debug Extension",
    "version": "1.28",
    "minimum_chrome_version": "10.0",
    "devtools_page": "devtools.html",
    "manifest_version": 3,
    "action": {
        "default_icon": "dart_grey.png"
    },
    "permissions": [
        "debugger",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker":  "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "detector.js"
            ],
            "run_at": "document_end"
        }   
    ]
}
